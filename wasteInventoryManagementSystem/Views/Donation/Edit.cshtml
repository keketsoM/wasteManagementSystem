@model WasteDonation

<div class="card shadow border-0 mt-4 rounded ">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">

                <div>
                    <input asp-for="CategoryId" hidden class="form-control" />
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for=Name class="ms-2"></label>


                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for=DisplayOrder class="ms-2"></label>

                </div>
                <div class="row">
                    <div class="col-6  col-md-3">
                        <button asp-controller="Category" asp-action="Edit" class="btn btn-outline-primary form-control" type="submit">Update</button>
                    </div>
                    <div class="col-6  col-md-3">
                        <a asp-controller="Category" asp-action="index" class="btn btn-outline-secondary form-control">Back to List</a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

