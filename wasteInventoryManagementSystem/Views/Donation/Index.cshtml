@model IEnumerable<WasteDonation>

<div class="card shadow border-0 mt-4 mb-5  rounded">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Donation List</</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6 text-end mb-3">
            </div>
            <div class="col-6 text-end mb-3">
                <a asp-controller="Category" asp-action="Create" class="btn btn-outline-dark"><i class="bi bi-plus-circle-fill"></i>Create Donation</a>
            </div>
        </div>
        <table class="table table-bordered table-borderless">
            <thead>
                <tr>
                    <th class="text-center">
                        Date and Time
                    </th>
                    <th class="text-center">
                        Business Name
                    </th>
                    <th class="text-center">
                        Contact Person
                    </th>
                    <th class="text-center">
                        Contact Number
                    </th>
                    <th class="text-center">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donation in Model.OrderBy(c => c.BusinessName))
                {

                    <tr class="table-striped-columns">
                        <td class="text-center">
                            @donation.Date
                        </td>
                        <td class="text-center">
                            @donation.BusinessName
                        </td>
                        <td class="text-center">
                            @donation.ContactPerson
                        </td>
                        <td class="text-center">
                            @donation.ContactNumber
                        </td>
                        <td>
                            <div class=row>
                                <div class="col-4">
                                    <a class="btn btn-outline-primary w-100 rounded" asp-controller="Donation" asp-action="Detail" asp-route-id="@donation.Id" style="width:100px"><i class="bi bi-eye-fill"></i>Detail</a>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-outline-secondary w-100 rounded" asp-controller="Donation" asp-action="Edit" asp-route-id="@donation.Id" style="width:100px"><i class="bi bi-pencil-square"></i>Edit</a>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-outline-danger w-100  rounded" asp-controller="Donation" asp-action="Delete" asp-route-id="@donation.Id" style="width:100px"><i class="bi bi-trash3-fill"></i>Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
